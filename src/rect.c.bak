#include <cpctelera.h>
#include "rect.h"


void rect_create (struct TRect *r, i8 x, i8 y, i8 w, i8 h) {
  r->width = w;
  r->height = h;
  r->left = x;
  r->top = y;
  r->right = x+w+1;
  r->bottom = y+h+1;
}